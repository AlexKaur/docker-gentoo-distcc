{
  "dependencyDashboard": true,
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "shellcheck-py/shellcheck-py"
      ],
      "versioning": "loose"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "# renovate datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s(ARG|ENV) .*?_VERSION=\"?(?<currentValue>.*?)\"?\\s"
      ]
    }
  ]
}
